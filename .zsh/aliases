# vim: ft=zsh

# Darwin's ls is a little different to Linux's
[[ "x$(uname -s)" = "xDarwin" ]] \
	&& alias ls='ls -G -h' \
	|| alias ls='ls --color=always -h'
alias df='df -h'

# Just in case we overwrite something important
alias mv='mv -iv'
alias cp='cp -iv'
alias rm='rm -iv'

alias ping='ping -c3'
